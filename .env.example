# ===========================================
# Multi-Agent Research Assistant Configuration
# ===========================================
# Copy this file to .env and fill in your values

# FastAPI Configuration
FASTAPI_DEBUG=True
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_WORKERS=4

# MongoDB Configuration (Azure Cosmos DB or local MongoDB)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=research_assistant_db

# Redis Cache (optional, for production)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=86400

# ===========================================
# LLM Configuration (OpenRouter)
# ===========================================
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Model selections (can be changed per agent)
RESEARCHER_MODEL=deepseek/deepseek-chat
ANALYST_MODEL=anthropic/claude-3.5-sonnet
FACT_CHECKER_MODEL=openai/gpt-4o
REPORT_GENERATOR_MODEL=deepseek/deepseek-chat

# ===========================================
# External Search APIs
# ===========================================

# Google Custom Search API
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# NewsAPI
NEWSAPI_KEY=your_newsapi_key_here

# Academic APIs (free, no key required)
ARXIV_API_BASE=http://export.arxiv.org/api/query
PUBMED_API_BASE=https://eutils.ncbi.nlm.nih.gov/entrez/eutils
WIKIPEDIA_API_BASE=https://en.wikipedia.org/api/rest_v1

# ===========================================
# Security
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# CORS (comma-separated list)
# ===========================================
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","https://yourdomain.com"]

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===========================================
# Research Settings
# ===========================================
MAX_SOURCES_DEFAULT=300
AGENT_TIMEOUT=120
MAX_RETRIES=3
